<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahulk.simplycustomkeyboard.SetUpActivity">


    <TextView
        android:id="@+id/tv_click_1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:text="@string/click_here_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_click_2"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/tv_click_1"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:text="@string/click_here_text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_enable_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_click_2"
        android:layout_centerInParent="true"
        android:padding="4dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:background="@color/colorPrimary"
        android:text="@string/first_enable"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_sise_14"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_click_return"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_below="@+id/btn_enable_keyboard"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:text="@string/click_return"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_set_default"
        android:layout_below="@+id/tv_click_return"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:background="@color/colorPrimary"
        android:text="@string/default_keyboard"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_sise_14"
        android:textStyle="normal" />


    <TextView
        android:layout_below="@+id/btn_set_default"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:text="@string/thank_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>




